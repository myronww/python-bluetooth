    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args":[
                "start",
                "--debug"
            ],
            "debugOptions": [
                "Sudo"
            ]
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
            "args": [
                "start",
                "--debug"
            ],
            "debugOptions": [
                "Sudo"
            ]
        }
    ]
}